<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_SelectFile"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_SelectText"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FileName"/>
    <TextView
        android:id="@+id/VMFileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FilePath"/>
    <TextView
        android:id="@+id/VMFilePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FileBytesCount"/>
    <TextView
        android:id="@+id/VMFileBytesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnHideActivity_ChooseFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHideActivity_ChooseFile"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/btnHideActivity_Execute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnHideActivity_Execute"
        android:textSize="20sp"
        android:layout_gravity="center"/>


</LinearLayout>